{
  "name": "cclaim-badge-fetcher",
  "version": "0.0.0",
  "description": "Fetches the badges for a profile on the Your Acclaim platform",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": {
    "name": "Sam Murphy",
    "email": "sam@sammurphy.dev",
    "url": "https://sammurphy.dev"
  },
  "license": "MIT",
  "private": false,
  "engines": {
    "node": ">= 12.20.0"
  },
  "scripts": {
    "lint": "eslint . --config .eslintrc --fix",
    "build": "NODE_ENV=production rollup -c ",
    "test": "jest",
    "test:integration-manual": "node manual-integration-test-harness",
    "test:coverage": "jest --coverage",
    "type-coverage": "type-coverage --strict --detail --ignore-catch --ignore-files \"**/*.test.ts\"",
    "quality-checks": "yarn lint && pretty-quick --staged && yarn type-coverage"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "deepmerge": "^4.2.2",
    "jsdom": "^16.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.0",
    "@semantic-release/npm": "^7.0.8",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/jsdom": "^16.2.5",
    "@types/mustache": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-unused-imports": "^1.0.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "mustache": "^4.0.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rollup": "^2.33.3",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "type-coverage": "^2.14.5",
    "typescript": "^4.1.2"
  },
  "typeCoverage": {
    "atLeast": 100
  },
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits"
      }
    ],
    "@semantic-release/npm",
    "@semantic-release/github"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn quality-checks",
      "pre-push": "yarn test:coverage",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
